---
import ChameleonLogo from "./ChameleonLogo.astro";
import HeaderBtns from "./HeaderBtns.svelte";
import NavBar from "./NavBar.astro";
import SmNavBar from "./SmNavBar.svelte";
---

<header
  class="fixed top-0 left-0 w-full border-b border-border-ink/60 bg-primary-bg/90 backdrop-blur supports-[backdrop-filter]:bg-primary-bg/80 z-40"
>
  <div class="mx-auto flex min-h-[5rem] max-w-6xl items-center justify-between gap-6 px-4 py-3 sm:px-6 lg:px-8">
    <a href="/" class="flex items-center gap-3 text-primary-text no-underline">
      <ChameleonLogo
        class="h-10 w-10 flex-shrink-0 md:h-12 md:w-12"
        width="48"
        height="48"
      />
      <span class="text-2xl font-display tracking-tight">Lefthand Journal</span>
    </a>
    <div class="hidden md:block">
      <NavBar />
    </div>
    <div class="flex items-center gap-3">
      <div class="md:hidden">
        <SmNavBar client:load />
      </div>
      <HeaderBtns client:load />
    </div>
  </div>
</header>
