---
import PageLayout from "@/layouts/PageLayout.astro";
import { getCollection } from "astro:content";
import EditorialCard from "@/components/Blog/EditorialCard.astro";

const posts = (await getCollection("blogs")).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<PageLayout title="Archive">
  <section class="flex flex-col gap-12">
    <div class="flex flex-col gap-4">
      <h1 class="font-display text-4xl leading-tight text-primary-text sm:text-5xl">
        Archive of every dispatch
      </h1>
      <p class="max-w-2xl text-lg text-secondary-text">
        Browse the full catalogue of Lefthand Journal essays. Use the categories above to narrow your reading, or wander through the grid below.
      </p>
    </div>
    <div class="grid gap-8 md:grid-cols-2 xl:grid-cols-3">
      {posts.map((post) => (
        <EditorialCard post={post} />
      ))}
    </div>
  </section>
</PageLayout>
